---
import Layout from '../layouts/Layout.astro';
// import Card from '../components/Card.astro';
const pageTitle = "Home";
const pageClass = "home";
---

<Layout pageTitle={ pageTitle } pageClass={ pageClass }>
	<div class="page">
		<div class="kv">
			<h1 class="en">Welcome to <span>Astro</span></h1>
		</div>
	</div>
</Layout>

<style>
	.kv {
		height: calc(100vh - 130px);
		display: flex;
		align-items: center;
		justify-content: center;
	}
	h1 {
		font-size: 60px;
		font-weight: 700;
	}
</style>
